set window-title-basename "true"
set selection-clipboard "clipboard"

# Colors
set notification-error-bg       "#f7768e" # Red
set notification-error-fg       "#c0caf5" # Foreground
set notification-warning-bg     "#ff9e64" # Orange
set notification-warning-fg     "#292e42" # Selection
set notification-bg             "#1a1b26" # Background
set notification-fg             "#c0caf5" # Foreground

set completion-bg               "#1a1b26" # Background
set completion-fg               "#7aa2f7" # Comment
set completion-group-bg         "#1a1b26" # Background
set completion-group-fg         "#7aa2f7" # Comment
set completion-highlight-bg     "#292e42" # Selection
set completion-highlight-fg     "#c0caf5" # Foreground

set index-bg                    "#1a1b26" # Background
set index-fg                    "#c0caf5" # Foreground
set index-active-bg             "#292e42" # Current Line
set index-active-fg             "#c0caf5" # Foreground

set inputbar-bg                 "#1a1b26" # Background
set inputbar-fg                 "#c0caf5" # Foreground
set statusbar-bg                "#1a1b26" # Background
set statusbar-fg                "#c0caf5" # Foreground

set highlight-color             "#ff9e64" # Orange
set highlight-active-color      "#ff007e" # Pink

set default-bg                  "#1a1b26" # Background
set default-fg                  "#c0caf5" # Foreground

set render-loading              true
set render-loading-fg           "#1a1b26" # Background
set render-loading-bg           "#b2b1ad" # Foreground

# Recolor mode settings
set recolor-lightcolor          "#1a1b26" # Background
set recolor-darkcolor           "#ffffff" # Foreground

# Startup options
set adjust-open width
set recolor true
