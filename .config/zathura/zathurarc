# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set selection-clipboard clipboard

# --- Colors ---

set recolor true

set notification-error-bg       "#f7768e" # Dark Red
set notification-error-fg       "#101319" # Background
set notification-warning-bg     "#e0af68" # Dark Yellow
set notification-warning-fg     "#101319" # Background
set notification-bg             "#101319" # Background
set notification-fg             "#dadff2" # Foreground

set completion-bg               "#101319" # Background
set completion-fg               "#dadff2" # Foreground
set completion-group-bg         "#101319" # Background
set completion-group-fg         "#dadff2" # Foreground
set completion-highlight-bg     "#e0af6855" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#101319" # Background
set index-fg                    "#dadff2" # Foreground
set index-active-bg             "#e0af68" # Dark Yellow 
set index-active-fg             "#101319" # Background

set inputbar-bg                 "#101319" # Background
set inputbar-fg                 "#dadff2" # Foreground
set statusbar-bg                "#101319" # Background
set statusbar-fg                "#dadff2" # Foreground

set highlight-color             "#e0af68" # Dark Yellow
set highlight-active-color      "#f7768e" # Dark Red 

set default-bg                  "#101319" # Background
set default-fg                  "#dadff2" # Foreground

set render-loading              true
set render-loading-fg           "#101319" # Background
set render-loading-bg           "#dadff2" # Foreground

set recolor-lightcolor          "#101319" # Background
set recolor-darkcolor           "#dadff2" # Foreground
