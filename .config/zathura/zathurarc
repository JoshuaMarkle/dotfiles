# Zathura config
# ~/.config/zathura/zathurarc

# --- General ---

# Layout
set window-title-basename "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 3

# Keybindings
map u scroll half-up 
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set selection-clipboard clipboard

# --- Colors ---

set recolor true

set notification-error-bg       "#f7768e" # Dark Red
set notification-error-fg       "#1a1b26" # Background
set notification-warning-bg     "#ffc777" # Dark Yellow
set notification-warning-fg     "#1a1b26" # Background
set notification-bg             "#1a1b26" # Background
set notification-fg             "#c0caf5" # Foreground

set completion-bg               "#1a1b26" # Background
set completion-fg               "#c0caf5" # Foreground
set completion-group-bg         "#1a1b26" # Background
set completion-group-fg         "#c0caf5" # Foreground
set completion-highlight-bg     "#ffc777" # Dark Yellow
set completion-highlight-fg     "#162320" # Background

set index-bg                    "#1a1b26" # Background
set index-fg                    "#c0caf5" # Foreground
set index-active-bg             "#ffc777" # Dark Yellow 
set index-active-fg             "#1a1b26" # Background

set inputbar-bg                 "#1a1b26" # Background
set inputbar-fg                 "#c0caf5" # Foreground
set statusbar-bg                "#1a1b26" # Background
set statusbar-fg                "#c0caf5" # Foreground

set highlight-color             "#ffc777" # Dark Yellow
set highlight-active-color      "#f7768e" # Dark Red 

set default-bg                  "#1a1b26" # Background
set default-fg                  "#c0caf5" # Foreground

set render-loading              true
set render-loading-fg           "#1a1b26" # Background
set render-loading-bg           "#c0caf5" # Foreground

set recolor-lightcolor          "#1a1b26" # Background
set recolor-darkcolor           "#c0caf5" # Foreground
