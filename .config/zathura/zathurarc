set notification-warning-fg     "#303742" # Selection #44475a
set notification-bg             "#1e222a" # Background
set notification-fg             "#d1d5da" # Foreground

set completion-bg               "#1e222a" # Background
set completion-fg               "#55aaff" # Comment
set completion-group-bg         "#1e222a" # Background
set completion-group-fg         "#55aaff" # Comment
set completion-highlight-bg     "#303742" # Selection
set completion-highlight-fg     "#d1d5da" # Foreground

set index-bg                    "#1e222a" # Background
set index-fg                    "#d1d5da" # Foreground
set index-active-bg             "#303742" # Current Line
set index-active-fg             "#d1d5da" # Foreground

set inputbar-bg                 "#1e222a" # Background
set inputbar-fg                 "#d1d5da" # Foreground
set statusbar-bg                "#1e222a" # Background
set statusbar-fg                "#d1d5da" # Foreground

set highlight-color             "#ffb347" # Orange
set highlight-active-color      "#e35161" # Pink

set default-bg                  "#303742" # Background
set default-fg                  "#d1d5da" # Foreground

set render-loading              true
