set window-title-basename "true"
set selection-clipboard "clipboard"

# Colors
set notification-error-bg       "#ff5768" # Red
set notification-error-fg       "#d1d5da" # Foreground
set notification-warning-bg     "#ffb347" # Orange
set notification-warning-fg     "#303742" # Selection #44475a
set notification-bg             "#0a0e14" # Background
set notification-fg             "#b3b1ad" # Foreground

set completion-bg               "#0a0e14" # Background
set completion-fg               "#55aaff" # Comment
set completion-group-bg         "#0a0e14" # Background
set completion-group-fg         "#55aaff" # Comment
set completion-highlight-bg     "#303742" # Selection
set completion-highlight-fg     "#b3b1ad" # Foreground

set index-bg                    "#0a0e14" # Background
set index-fg                    "#b3b1ad" # Foreground
set index-active-bg             "#303742" # Current Line
set index-active-fg             "#b3b1ad" # Foreground

set inputbar-bg                 "#0a0e14" # Background
set inputbar-fg                 "#b3b1ad" # Foreground
set statusbar-bg                "#0a0e14" # Background
set statusbar-fg                "#b3b1ad" # Foreground

set highlight-color             "#ffb347" # Orange
set highlight-active-color      "#e35161" # Pink

set default-bg                  "#0a0e14" # Background
set default-fg                  "#b3b1ad" # Foreground

set render-loading              true
set render-loading-fg           "#0a0e14" # Background
set render-loading-bg           "#b2b1ad" # Foreground

# Recolor mode settings
set recolor-lightcolor          "#0a0e14" # Background
set recolor-darkcolor           "#ffffff" # Foreground

# Startup options
set adjust-open width
set recolor true
